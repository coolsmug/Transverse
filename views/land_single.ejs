<%- include ('./include/index-header.ejs') %>
<%- include ('./include/main-header.ejs') %>



  <section class="section swiper-container swiper-slider swiper-slider-minimal" data-loop="true" data-slide-effect="fade" data-autoplay="4759" data-simulate-touch="true">
    <div class="swiper-wrapper">
     
          <div class="swiper-slide swiper-slide_video" data-slide-bg="<%= homes.img.url %>">
            <div class="container">
              <div class="jumbotron-classic-content">
                <div class="wow-outer">
                  <div class="title-docor-text font-weight-bold title-decorated text-uppercase wow slideInLeft text-white"><%= homes.land_id  %></div>
                </div>
                <h1 class="text-uppercase text-white font-weight-bold wow-outer"><span class="wow slideInDown" data-wow-delay=".2s"><%= homes.name %></span></h1>
                <p class="text-white wow-outer"><span class="wow slideInDown" data-wow-delay=".35s"><%= homes.description %></span></p>
                <div class="wow-outer button-outer"><a class="button button-md button-primary button-winona wow slideInDown"  data-wow-delay=".4s"><%= homes.categories %></a></div>
              </div>
            </div>
          </div>

          <div class="swiper-slide swiper-slide_video" data-slide-bg="<%= homes.image.url %>">
            <div class="container">
              <div class="jumbotron-classic-content">
                <div class="wow-outer">
                  <div class="title-docor-text font-weight-bold title-decorated text-uppercase wow slideInLeft text-white"><%= homes.house_id %></div>
                </div>
                <h1 class="text-uppercase text-white font-weight-bold wow-outer"><span class="wow slideInDown" data-wow-delay=".2s"><%= homes.name %></span></h1>
                <p class="text-white wow-outer"><span class="wow slideInDown" data-wow-delay=".35s"><%= homes.description %></span></p>
                <div class="wow-outer button-outer"><a class="button button-md button-primary button-winona wow slideInDown" href="/" data-wow-delay=".4s"><%= homes.categories %></a></div>
              </div>
            </div>
          </div>

    </div>
  
    <div class="swiper-pagination-outer container">
      <div class="swiper-pagination swiper-pagination-modern swiper-pagination-marked" data-index-bullet="true"></div>
    </div>
    <ul class="breadcrumbs-custom-path">
      <li><a href="/">Home</a></li>
      <li class="active"><%= homes.name %></li>
    </ul>
  </section>



<section class="section novi-background section-md text-center">

    <div class="container">
      <h3 class="text-uppercase font-weight-bold wow-outer"><span class="wow slideInDown"><%= homes.name %></span></h3>
      <div class="row row-lg-50 row-35 offset-top-2">
    
           
        <div class="col-md-6 wow-outer">
          <!-- Post Modern-->
          <div style="text-align: left;">
            <h4 style="color: #075579; font-weight: bolder;"><%= homes.name %></h4>
            <h5>CODE: <span style="color: #4ca50f; font-weight: bolder;"><%= homes.land_id %></span></h5>
          </div>
          <article class="post-modern wow slideInLeft"><a class="post-modern-media" ><img src="<%= homes.image.url %>" alt="" width="571" height="353"/></a>
            <h4 class="post-modern-title"><a class="post-modern-title" href="https://www.google.com/maps?q=<%= homes.location %>" target="_blank"><%= homes.location %></a></h4>
            <ul class="post-modern-meta">
              <li><a class="button-winona" href="#">&#8358;<%=homes.price %></a></li>
              <li><%= homes.area %></li>
              <li>Bedroom: <%= homes.bed %></li>
              <li>Garage: <%= homes.garage %></li>
            </ul>
            <p><%= homes.description %></p>
            <p><%= homes.location %></p>
            <div class="pag">
                <p style="font-weight: bolder; color: black;">Armenities:</p> 
                <ol >

                    <% 
                    homes.amenities.forEach(function(amen )
                              { %>
                                  <li>
                                      <%= amen %>
                                  </li>
                              <% }) %>
                </ol>
            </div>

            <button onclick="redirectToPage()">
                Pay with Paystack
            </button>
           
           
          </article>
        </div>
      
      
        
      </div>
    </div>

    <div class="container">
      <h3 class="text-uppercase wow-outer"><span class="wow slideInUp">Our Agent in Charge</span></h3>
      <div class="row row-50 row-xxl-70 justify-content-center justify-content-lg-start">
        <% if(agent) { %>
          <% let staf = agent %>
        <div class="col-md-10 col-lg-6 wow-outer">
          <!-- Profile Creative-->
          <article class="profile-creative wow slideInLeft">
            <figure class="profile-creative-figure"><img class="profile-creative-image" src="<%= staf.img.url %>" alt="" width="270" height="273"/>
            </figure>
            <div class="profile-creative-main">
              <h5 class="profile-creative-title"><a href="#"><%= staf.first_name %> <%= staf.second_name %></a></h5>
              <p class="profile-creative-position">
               <%= staf.performance %>
              </p>
              <div class="profile-creative-contacts">
                <div class="object-inline"><span class="icon novi-icon icon-md mdi mdi-phone"></span><a href="tel:<%= staf.phone %>"><%= staf.phone %></a></div>
              </div>
              <p><%= staf.about %></p>
            </div>
          </article>
        </div>
       
        <% } %>
      </div>
    </div>
  </section>

  <style>
    .pag{
        display: flex;
        flex-direction: column;
        justify-content:flex-end;
        align-items:flex-end;
    }

    .pag ol{
        display: flex;
        flex-direction: column;
    }

    .pag li {
      list-style-type: upper-alpha;
    }
  </style>
   
   
   <script>

    function redirectToPage() {
  var xhr = new XMLHttpRequest();
  xhr.open("GET", "/", true); // Replace "destination_page.html" with the URL of the page you want to redirect to
  xhr.onreadystatechange = function() {
    if (xhr.readyState === 4 && xhr.status === 200) {
      window.location.href = "/paymentss?id=<%= homes._id %>"; // Redirect to the destination page once the request is successfully completed
    }
  };
  xhr.send();
}


   </script>
    
  
  <%- include ('./include/index-footer.ejs') %>
 